{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build"],
      "env": ["PORT"],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "build": {
      "dependsOn": ["^build", "lint", "type-check"],
      "outputs": ["dist/**", "build/**"],
      "inputs": ["$TURBO_DEFAULT$", "!.env.sample", ".env"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": ["**/*.{ts,tsx}"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "stylelint": {
      "dependsOn": ["^stylelint"]
    },
    "format": {
      "outputLogs": "new-only"
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "outputs": ["migrations/**"]
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "test:ui": {
      "cache": false,
      "persistent": true
    },
    "i18n": {
      "outputs": ["**/@types/resources.d.ts"]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "DEFAULT_API_PREFIX",
    "CLIENT_DEV_SERVER_URL",
    "DATABASE_URL"
  ],
  "globalPassThroughEnv": ["DEV"]
}
