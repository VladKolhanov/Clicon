{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["PORT"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": ["**/*.{ts,tsx}"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "outputLogs": "new-only"
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": ["NODE_ENV", "DEFAULT_API_PREFIX", "CLIENT_DEV_SERVER_URL"],
  "globalPassThroughEnv": ["DEV"]
}
