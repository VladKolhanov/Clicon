{
  "name": "@easymart/database",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./client": {
      "types": "./dist/dbClient.d.ts",
      "default": "./dist/dbClient.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./dist/schema.js"
    }
  },
  "scripts": {
    "build": "pnpm run lint && pnpm run type-check && tsup",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx ./src/seed/index.ts",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "type-check": "tsc --noEmit --pretty"
  },
  "prettier": "@easymart/prettier-config",
  "dependencies": {
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-seed": "^0.3.1",
    "pg": "^8.16.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@easymart/eslint-config": "workspace:*",
    "@easymart/prettier-config": "workspace:*",
    "@easymart/tsup-config": "workspace:*",
    "@easymart/typescript-config": "workspace:*",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.1",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "tsx": "^4.19.3",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.10.0"
}
