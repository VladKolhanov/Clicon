{
  "extends": "./base.json",
  "exclude": ["node_modules", "build", "${configDir}/src/**/*.test.ts"],
  "include": ["${configDir}/src/**/*"],
  "compilerOptions": {
    "types": ["node", "express"],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "${configDir}",
    "outDir": "${configDir}/build",
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "${configDir}",
    "paths": {
      "~/*": ["${configDir}/src/*"]
    }
  }
}
