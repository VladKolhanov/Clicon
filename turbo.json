{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["PORT"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": ["**/*.{ts,tsx}"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "clean": {
      "cache": false
    }
  },
  "globalPassThroughEnv": ["DEV"]
}
